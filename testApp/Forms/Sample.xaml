                    VerticalAlignment="Center" 
                    Grid.Row="2"   
                    HorizontalAlignment="Right"
                    Grid.Column="1">
            <Button IsCancel="True"
                    IsDefault="True"
                Style="{StaticResource close_button_template}" 
                    Content=" Закрыть " 
                    HorizontalAlignment="Right"/>
        </StackPanel>
        <TextBox 
            Margin="25,5,10,5"
            Grid.Column="1" 
            Grid.Row="0" 
            IsReadOnly="True"
            BorderThickness="0"
            Background="Transparent"
                Text="W=3&#13;
