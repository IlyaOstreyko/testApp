        <Button IsDefault="True" Command="{Binding Start}" 
                Style="{StaticResource crud_button_template}"
                Width="150" 
                Height="30" 
                Grid.Row="12"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="5">
            <TextBlock Text=" Начать тест " 
                           TextAlignment="Center" 
                       FontSize="15"
                           VerticalAlignment="Stretch"/>
        </Button>

    </Grid>
</Window>
